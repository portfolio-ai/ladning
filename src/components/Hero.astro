---
import { Image } from "astro:assets"
import heroImage from "../assets/hero-image.jpeg"
---
<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/5 via-background to-secondary/10">
  <div class="container mx-auto px-4 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <div class="flex items-center gap-2 text-primary">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 17l6-6 4 4 8-8"></path>
            </svg>
            <span class="text-sm font-medium bg-primary/10 px-3 py-1 rounded-full">
              AI-Powered Investment Tracking
            </span>
          </div>
          <h1 class="text-4xl lg:text-6xl font-bold text-foreground leading-tight">
            Your Smart
            <span class="bg-gradient-to-r from-primary to-chart-1 bg-clip-text text-transparent">
              Portfolio AI
            </span>
            Assistant
          </h1>
          <p class="text-xl text-muted-foreground max-w-lg">
            Track your investments with advanced indicators and get personalized AI recommendations 
            based on your portfolio performance.
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#waitlist" 
             class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary text-primary-foreground rounded-lg font-semibold text-lg hover:bg-primary/90 transition-colors group">
            Join the Waitlist
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a href="#analytics" 
             class="inline-flex items-center justify-center px-6 py-3 border border-primary text-primary rounded-lg font-semibold text-lg hover:bg-primary hover:text-primary-foreground transition-colors">
            View Analytics
          </a>
        </div>

        <div class="flex items-center gap-8 pt-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-foreground">10K+</div>
            <div class="text-sm text-muted-foreground">Pre-registrations</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-foreground">50+</div>
            <div class="text-sm text-muted-foreground">AI Indicators</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-foreground">24/7</div>
            <div class="text-sm text-muted-foreground">AI Analysis</div>
          </div>
        </div>
      </div>

      <div class="relative">
        <div class="absolute inset-0 bg-gradient-to-r from-chart-1/20 to-chart-2/20 rounded-3xl blur-3xl"></div>
        <Image src={heroImage} alt="Financial Dashboard" class="relative rounded-3xl shadow-2xl w-full h-auto" />
      </div>
    </div>
  </div>
</section>
