---
import Navigation from "../components/Navigation.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import ChartsPreview from "../components/ChartsPreview.astro";
import About from "../components/About.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";
import "../styles/tailwind.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content="Portfolio AI is your intelligent investment assistant. Get smart portfolio insights, advanced analytics, and personalized investment recommendations powered by artificial intelligence." />
  <title>Portfolio AI - Your Smart Investment Assistant</title>
</head>
<body class="min-h-screen bg-background">
  <Navigation />
  
  <main>
    <section id="hero">
      <Hero />
    </section>
    
    <section id="features">
      <Features />
    </section>
    
    <section id="analytics">
      <ChartsPreview />
    </section>
    
    <section id="contact">
      <ContactForm />
    </section>
  </main>
  
  <Footer />
</body>
</html>

